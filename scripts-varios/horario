#!/bin/bash
## SCRIPT PARA INVOCAR HORARIO DE TIEMPO LIBRE CON UN ATAJO DE TECLADO
## FECHA: 25 de noviembre de 2019

function horario_lectivos(){
	HORARIO="‚¶Å 07:00 a 07:30 ‚Üí Desayunaci√≥n
‚¶Å 07:30 a 13:30 (15:30) ‚Üí UJA + Desplazamientos
‚¶Å 13:30 (15:30) a 16:30 ‚Üí Almuerzo + Randomized Activity (Lite)
‚¶Å 16:30 a 19:00 (19:30) ‚Üí Estudio
‚¶Å 19:00 (19:30) a 20:00 ‚Üí Cena
‚¶Å 20:00 a 22:00 	‚Üí Randomized Activity (Completo)"
}

function horario_viernes(){
	HORARIO="üïõ 07:00 a 07:30 ‚û° ü•õ Desayunaci√≥n
üïõ 07:30 a 08:30 ‚û° üöóüöå Desplazamiento a UJA
üï£ 08:30 a 09:30 ‚û° üè´ UJA
üïß 12:30 a 13:15 ‚Üí Estudio
üïê 13:15 a 14:00 ‚Üí Almuerzo
üïë 14:00 a 16:00 ‚Üí Estudio
üïì 16:00 a 16:30 ‚Üí Visualizaci√≥n de redes sociales
üïü 16:30 a 20:00 ‚Üí Asociaci√≥n + Desplazamientos
üïõ 20:00 a 20:30 ‚Üí Cena
üïõ 20:30 a 22:00 ‚Üí Randomized Activity (Completo)"
}

function horario_festivos(){
	HORARIO="‚¶Å 07:30 a 08:30 ‚Üí Desayunaci√≥n
‚¶Å 08:30 a 11:30 ‚Üí Randomized Activity (Completo)
‚¶Å 11:30 a 13:30 ‚Üí Estudio
‚¶Å 13:30 a 14:00 ‚Üí Almuerzo
‚¶Å 14:00 a 14:45 ‚Üí Randomized Activity (Lite)
‚¶Å 14:45 a 16:45 ‚Üí Estudio
‚¶Å 16:45 a 20:00 ‚Üí Hora h√°bil de salidas y quedadas + Randomized Activity (Completo)
‚¶Å 20:00 a 20:30 ‚Üí Cena
‚¶Å 20:30 a 22:00 ‚Üí Randomized Activity (Completo)"
}

function es_festivo(){
	# C√ìDIGOS MMDD PARA FECHAS FESTIVAS
	navidad="1221 1222 1223 1224 1225 1226 1227 1228 1229 1230 1231 0101 0102 0103 0104 0105 0106"
	semana_santa="0404 0405 0406 0407 0408 0409 0410 0411 0412" ## SEMANA SANTA DE 2020
	dias_festivos="${navidad} ${semana_santa} 0228 0501 0611 1012 1018 1101 1206 1208"

	# ¬øQU√â D√çA ES HOY?
	hoy=$(date +%m%d)

	# ¬øES HOY FESTIVO?
	if echo ${dias_festivos} | grep $hoy > /dev/null; then
		horario_festivos
	else
		es_festivo=0
	fi
}

dia=$(date +%a)
es_festivo
if [[ ${es_festivo} == 0 ]]; then
	case $dia in
		vie)horario_viernes;;
		s√°b)horario_festivos;;
		dom)horario_festivos;;
		*)horario_lectivos;;
	esac
fi
unset es_festivo
icon=$(($RANDOM / 14 % 14 % 3))
[[ $icon == 0 ]] && icon=gnome-calendar
[[ $icon == 1 ]] && icon=gnome-todo
[[ $icon == 2 ]] && icon=clock
notify-send Horario "$HORARIO" -i $icon

exit 0
